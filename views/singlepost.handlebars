<section class="single-post">
    <div class="post-title">
        <h2>{{post.title}}</h2>
    </div>
    <div class="post-info">
        <div class="post-comment"
            <p>{{post.post_comment}}</p>
        </div>
        <div>
            <p class="post-created">Created {{format_date post.created_at}}</p>
        </div>
        <h3>Comments:</h3>
    </div>
    <div class="comment-info">
        {{#each post.comments}}
        <section class="comment">
            <div class="post-comment">
                {{comment_text}}
            </div>
            <div>
                <p class="post-created">
                    Created by {{username}} on {{format_date created_at}}
                </p>
            </div>
        </section>
        {{/each}}
    </div>

</section>